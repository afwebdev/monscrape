<div id="commentModal" class="modal">
	<div class="modal-content">
		<div class="row">
			<div class="col s12">
				<h4>New Comment</h4>
				<form id="submitForm">
					<div class="row">
						<div class="col s6">
							<div class="input-field">
								<i class="material-icons prefix">person</i>
								<input placeholder="Anonymous" id="name" type="text"
									class="validate">
								<label for="commentAuthor">Name:</label>
							</div>
						</div>
					</div>

					<div class="row">
						<div class="col s12">
							<div class="input-field">
								<i class="material-icons prefix">mode_edit</i>
								<textarea placeholder="..." id="commentTextArea"
									class="materialize-textarea"></textarea>
								<label for="commentTextArea">Comment:</label>
							</div>
						</div>
					</div>
					<button href="#" id="submitComment"
						class="waves-effect waves-light red darken-2 btn-small"><i
							class="material-icons right white-text">cloud</i>Submit
						Comment</button>
				</form>
			</div>
		</div> {{!-- end of main row --}}

	</div>
	<div class="modal-footer">
		<a href="#!" class="modal-close waves-effect btn-flat">Close</a>
	</div>
</div>


<div class="landing">
	<h3>Go Fetch Eh.
		<img id="leaf" src="/img/leaf.png" alt="MapleLeaf">
	</h3>
	<span>News Article Scraper For Beaverton</span>
</div>
<div class="row">
	<div class="articleContainer col s12">
		<div class="card z-depth-3">
			<div class="card-content">
				<h5 id="articleTitle"></h5>
				<p id="articleInfo"></p>
				<span><a id="articleLink" href="">Read More</a></span>
			</div>
			<div class="card-content">
				<span class="activator">View Comments
					<i class="activator material-icons right">comment</i>
				</span>
			</div>
			<div class="card-reveal">
				<span class="card-title grey-text text-darken-4">Comments<i
						class="material-icons right">close</i></span>
				{{!-- onclick here for modal --}}
				<a href="#commentModal" id="newComment"
					class="waves-effect waves-light red darken-2 btn-small modal-trigger"><i
						class="material-icons right white-text">cloud</i>New Comment</a>


				{{!-- comment section --}}
				<div class="commentDiv col s12">
					<ul class="collection"></ul>
				</div>
			</div>
		</div>
	</div>

</div>


